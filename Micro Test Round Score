from time import sleep

bmoving1 = [3,1,2,3]
rmoving1 = [2,3,2,4]
b = 0
r = 0
bround = 0
rround = 0


b0 = 0
b = b + b0
if b > r:
    bround = b-r
else:
    bround = 0
print("B = ", b)
print("B round = ", bround)
sleep(1)
r0 = 0
r = r + r0
if r > b:
    rround = r-b
else:
    rround = 0
print("R = ", r)
print("R round = ", rround)
sleep(1)
